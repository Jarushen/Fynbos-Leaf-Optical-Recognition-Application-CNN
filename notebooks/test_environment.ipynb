   "source": [
    "# Interactive Test Environment\n",
    "\n",
    "This notebook lets you upload an image of a fynbos specimen, run it through the trained model and view a SHAP heatmap of the prediction.\n",
    "\n",
    "To get started replace `PATH_TO_YOUR_MODEL_DIRECTORY` below with the path to a model directory produced by `train.py` (the folder containing `saved_model` and `class_names.txt`).  Then run all cells.\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import ipywidgets as widgets\n",
    "from IPython.display import display\n",
    "import tensorflow as tf\n",
    "import numpy as np\n",
    "from PIL import Image\n",
    "import matplotlib.pyplot as plt\n",
    "from pathlib import Path\n",
    "import io\n",
    "\n",
    "from src.shap_analysis import compute_shap_values, shap_overlay\n",
    "from src.test_image import load_class_names\n",
    "from src.image_quality import compute_sharpness, compute_brightness, QualityCriteria\n",
    "\n",
    "# TODO: Update this path to point to your trained model directory\n",
    "model_dir = Path('PATH_TO_YOUR_MODEL_DIRECTORY')  # e.g. 'models/run_20250101-123456'\n",
    "\n",
    "# Load the model and class names\n",
    "model = tf.keras.models.load_model(model_dir / 'saved_model')\n",
    "class_names = load_class_names(model_dir)\n",
    "\n",
    "def classify_image(image_bytes):\n",
    "    \"\"\"Classify an image and compute SHAP values.\n",
    "\n",
    "    Parameters\n",
    "    ----------\n",
    "    image_bytes : io.BytesIO\n",
    "        Bytes object representing the uploaded image.\n",
    "\n",
    "    Returns\n",
    "    -------\n",
    "    str\n",
    "        Predicted class name.\n",
    "    ndarray\n",
    "        Array of class probabilities.\n",
    "    matplotlib.figure.Figure\n",
    "        Figure object containing the SHAP overlay.\n",
    "    \"\"\"\n",
    "    # Read image from bytes and convert to RGB\n",
    "    image = Image.open(image_bytes).convert('RGB')\n",
    "    # Resize to model input\n",
    "    image_resized = image.resize((224, 224), Image.Resampling.BILINEAR)\n",
    "    arr = np.array(image_resized)\n",
    "    # Preprocess\n",
    "    preprocessed = tf.keras.applications.resnet50.preprocess_input(arr.astype('float32')[None, ...])\n",
    "    # Predict\n",
    "    preds = model.predict(preprocessed)\n",
    "    probs = preds[0]\n",
    "    pred_idx = int(np.argmax(probs))\n",
    "    pred_name = class_names[pred_idx] if class_names else str(pred_idx)\n",
    "    # Compute SHAP values\n",
    "    shap_values, _ = compute_shap_values(model, arr, nsamples=50)\n",
    "    fig = shap_overlay(arr, shap_values)\n",
    "    return pred_name, probs, fig\n",
    "\n",
    "def on_upload(change):\n",
    "    \"\"\"Callback for when a new file is uploaded.\n",
    "    It runs a basic quality check on the image before classification, \n",
    "    then displays the prediction and SHAP overlay.\n",
    "    \"\"\"\n",
    "    output.clear_output(wait=True)\n",
    "    for filename, file_info in uploader.value.items():\n",
    "        with output:\n",
    "            # Convert uploaded bytes into PIL image and numpy array\n",
    "            img_bytes = io.BytesIO(file_info['content'])\n",
    "            image = Image.open(img_bytes).convert('RGB')\n",
    "            arr = np.array(image.resize((224, 224), Image.Resampling.BILINEAR))\n",
    "            # Quality check using thresholds from QualityCriteria\n",
    "            criteria = QualityCriteria()\n",
    "            min_dim = min(arr.shape[0], arr.shape[1])\n",
    "            sharpness = compute_sharpness(arr)\n",
    "            brightness = compute_brightness(arr)\n",
    "            resolution_ok = min_dim >= criteria.min_dim\n",
    "            sharpness_ok = sharpness >= criteria.min_sharpness\n",
    "            bright_ok = criteria.brightness_range[0] <= brightness <= criteria.brightness_range[1]\n",
    "            print(f'Image size: {arr.shape[1]}×{arr.shape[0]} – {"OK" if resolution_ok else "Too small"}')\n",
    "            print(f'Sharpness: {sharpness:.2f} – {"OK" if sharpness_ok else "Too blurry"}')\n",
    "            print(f'Brightness: {brightness:.2f} – {"OK" if bright_ok else "Too dark/bright"}')\n",
    "            if not (resolution_ok and sharpness_ok and bright_ok):\n",
    "                print('Image did not meet quality thresholds and will not be classified.')\n",
    "                continue\n",
    "            # Rewind the BytesIO so classify_image can read it\n",
    "            img_bytes.seek(0)\n",
    "            pred_name, probs, fig = classify_image(img_bytes)\n",
    "            print(f'Predicted class: {pred_name}')\n",
    "            for idx, p in enumerate(probs):\n",
    "                name = class_names[idx] if class_names else str(idx)\n",
    "                print(f'{name}: {p*100:.2f}%')\n",
    "            display(fig)\n",
    "\n",
    "# Create a file upload widget\n",
    "uploader = widgets.FileUpload(accept='image/*', multiple=False)\n",
    "output = widgets.Output()\n",
    "\n",
    "uploader.observe(on_upload, names='value')\n",
    "display(widgets.VBox([uploader, output]))\n"
   ]
  }
